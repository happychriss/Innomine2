<%= form_with(model: competition, local: true) do |form| %>
  <% if competition.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(competition.errors.count, "error") %> prohibited this competition from being saved:</h2>

      <ul>
      <% competition.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= form.label :competition_name %>
    <%= form.text_field :competition_name %>
  </div>

  <div class="field">
    <%= form.label :max_markets %>
    <%= form.number_field :max_markets %>
  </div>

  <div class="field">
    <%= form.label 'Market Velocity, large B - large liquidity' %>
    <%= form.number_field :market_velocity_b %>
  </div>

  <div class="field">
    <%= form.label :max_winning_markets %>
    <%= form.number_field :maxwins %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
